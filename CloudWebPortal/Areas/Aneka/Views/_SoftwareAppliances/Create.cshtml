@model CloudWebPortal.Areas.Aneka.Models.SoftwareAppliance
@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="block-content">
    <h1>
        Create Machines Software Appliances</h1>
    <div class="block-controls">
        <ul class="controls-buttons">
            <li class="sep"></li>
            <li id="Widget_Link"><a href="#" onclick="openModalWindow_ForWidget('@HttpContext.Current.User.Identity.Name','Create','_SoftwareAppliances',3)" title="Add This Widget To The Dashboard">
                <img src="@Url.Content("~/Content/images/icons/fugue/plus-circle.png")" width="16" height="16"></a></li>
        </ul>
    </div>
    @using (Html.BeginForm("CreatePost", "_SoftwareAppliances", FormMethod.Post, new { @class = "form" }))
    {
        <div id="ValidationSummaryDiv_SoftwareAppliances_Create">
            @Html.ValidationSummary()
        </div>
        <br />
        <fieldset>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "full-width" })
            @Html.LabelFor(model => model.Vendor)
            @Html.TextBoxFor(model => model.Vendor, new { @class = "full-width" })
            @Html.LabelFor(model => model.Version)
            @Html.TextBoxFor(model => model.Version, new { @class = "full-width" })
            @Html.Label("Add this software appliances to the following machines:")
            @Html.ListBox("MachinesList", (MultiSelectList)ViewBag.Machines, new { style = "width: 200px; height: 200px;" })
            <br />
            <br />
            <p>
                <button type="submit" class="full-width button">
                    Create</button>
            </p>
        </fieldset>
    }
</div>
<script type="text/javascript">
    $("button").click(function () {
        $("#ValidationSummaryDiv_SoftwareAppliances_Create ul").addClass("message error no-margin");
    });
</script>
