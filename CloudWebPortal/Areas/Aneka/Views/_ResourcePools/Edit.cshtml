@model CloudWebPortal.Areas.Aneka.Models.ResourcePool
@{
    Layout = null;
}
<div class="block-content">
    <h1>
        Edit Resource Pool</h1>
    <div class="block-controls">
        <ul class="controls-buttons">
            <li class="sep"></li>
            <li id="Widget_Link"><a href="#" onclick="openModalWindow_ForWidget('@HttpContext.Current.User.Identity.Name','Edit','_ResourcePools',3,@Model.ResourcePoolId)" title="Add This Widget To The Dashboard">
                <img src="@Url.Content("~/Content/images/icons/fugue/plus-circle.png")" width="16" height="16"></a></li>
        </ul>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm("EditPost", "_ResourcePools", FormMethod.Post, new { @class = "form" }))
    {
        <div id="ValidationSummaryDiv_ResourcePools_Edit">
            @Html.ValidationSummary()
        </div>
        <br />
        <fieldset>
            <legend>ID: @Model.ResourcePoolId</legend>
            @Html.HiddenFor(model => model.ResourcePoolId)
            @Html.LabelFor(model => model.ResourcePoolDisplayName)
            @Html.TextBoxFor(model => model.ResourcePoolDisplayName, new { @class = "full-width" })
            <p>
                <button type="submit" class="full-width button">
                    Edit</button>
            </p>
        </fieldset>
    }
</div>
<script type="text/javascript">
    $("button").click(function () {
        $("#ValidationSummaryDiv_ResourcePools_Edit ul").addClass("message error no-margin");
    });
</script>
