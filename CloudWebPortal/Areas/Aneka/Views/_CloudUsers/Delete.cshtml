@model CloudWebPortal.Areas.Aneka.Models.CloudUserAccount

@{
    Layout = null;
}

<div class="block-content">
<h1>
        Delete Confirmation</h1>
    <div class="block-controls">
        <ul class="controls-buttons">
            <li class="sep"></li>
            <li id="Widget_Link"><a href="#" onclick="openModalWindow_ForWidget('@HttpContext.Current.User.Identity.Name','Delete','_CloudUsers',3,@Model.CloudUserAccountId)" title="Add This Widget To The Dashboard">
                <img src="@Url.Content("~/Content/images/icons/fugue/plus-circle.png")" width="16" height="16"></a></li>
        </ul>
    </div>
<div class="infos">
	<h3>Remove Cloud User Confirmation</h3>
	<p>Are you sure that you want to remove this user with username <strong>@Html.DisplayFor(model => model.Username)</strong>?</p>
    <br />
    <p><strong>Warnning: You must allow Aneka web portal to use at least one user account in each cloud to be used for accounting and reporting</strong></p>
</div>

<div class="block-footer">
@using (Html.BeginForm("DeletePost", "_CloudUsers", FormMethod.Post, new { @class = "form" }))
{
    @Html.HiddenFor(model => model.CloudUserAccountId)
    <p>
        <button type="submit" class="button full-width">Yes, I'm sure</button>
    </p>
}
</div>
</div>