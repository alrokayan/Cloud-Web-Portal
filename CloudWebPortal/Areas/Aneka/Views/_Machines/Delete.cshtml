@model CloudWebPortal.Areas.Aneka.Models.Machine
@{
    Layout = null;
}
<div class="block-content">
    <h1>
        Delete Confirmation</h1>
    <div class="block-controls">
        <ul class="controls-buttons">
            <li class="sep"></li>
            <li id="Widget_Link"><a href="#" onclick="openModalWindow_ForWidget('@HttpContext.Current.User.Identity.Name','Delete','_Machines',3,@Model.MachineId)" title="Add This Widget To The Dashboard">
                <img src="@Url.Content("~/Content/images/icons/fugue/plus-circle.png")" width="16" height="16"></a></li>
        </ul>
    </div>
    <div class="infos">
        <h3>
            Remove Machine Confirmation</h3>
        <p>
            Are you sure that you want to remove this machine <strong>@Html.DisplayFor(model => model.DisplayName)</strong>?</p>
        <p>
            IP Address: <strong>@Html.DisplayFor(model => model.IP)</strong></p>
        <p>
            Platform: <strong>@Html.DisplayFor(model => model.Platform.Platform)</strong></p>
        <p>
            Type: <strong>@Html.DisplayFor(model => model.Type.Type)</strong></p>
        <br />
        <p>
            <strong>Warnning: If this machine has an Aneka deamon installed, it will be uninstalled
                first</strong></p>
        <p>
            <strong>Warnning: If this machine has containers installed, they will be uninstalled
                first</strong></p>
    </div>
    <div class="block-footer">
        @using (Html.BeginForm("DeletePost", "_Machines", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(model => model.MachineId)
            <p>
                <button type="submit" class="button full-width">
                    Yes, I'm sure</button>
            </p>
        }
    </div>
</div>
