@model CloudWebPortal.Models.WebPortalLoginCredential
@{
    Layout = null;
}
<div class="block-content">
    <h1>
        Details for user ID: @Model.WebPortalLoginCredentialId</h1>
    <div class="block-controls">
        <ul class="controls-buttons">
            <li class="sep"></li>
            <li id="Widget_Link"><a href="#" onclick="openModalWindow_ForWidget('@HttpContext.Current.User.Identity.Name','Details','_PortalUsers',9,@Model.WebPortalLoginCredentialId)" title="Add This Widget To The Dashboard">
                <img src="@Url.Content("~/Content/images/icons/fugue/plus-circle.png")" width="16" height="16"></a></li>
        </ul>
    </div>
    <!-- Add the class 'table' -->
    <table class="table" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th scope="col">@Html.LabelFor(model => model.Username)
                </th>
                <th scope="col">@Html.LabelFor(model => model.Password)
                </th>
                <th scope="col">@Html.LabelFor(model => model.Widgets)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Username)
                </td>
                <td>
                    **********
                </td>
                <td>
                    <div class="more-events">@Model.Widgets.Count() widgets
                        <ul>
                            @foreach (CloudWebPortal.Models.Widget widget in Model.Widgets.ToList())
                            {
                                <li class="icon-file"><a href="#" onclick="openModalWindow(@Html.DisplayFor(widgetItem => widget.WidgetId),'Details','_DashboardWidgets',null,600,'Aneka')">@Html.DisplayFor(widgetItem => widget.ControllerName)/@Html.DisplayFor(widgetItem => widget.ActionName)/@Html.DisplayFor(widgetItem => widget.ActionId)</a></li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="block-footer">
        <a href="#" onclick="openModalWindow(@Html.DisplayFor(modelItem => modelItem.WebPortalLoginCredentialId),'Edit','_PortalUsers','Edit User',600,'Aneka')" class="button">
            Edit this user</a> <a href="#" onclick="openModalWindow(@Html.DisplayFor(modelItem => modelItem.WebPortalLoginCredentialId),'Create','_DashboardWidgets','Add New Widget To The Dashboard',600,'Aneka')" class="button">
                Add widget</a> <span class="sep"></span><a href="#" class="button" onclick="openModalWindow(@Html.DisplayFor(modelItem => modelItem.WebPortalLoginCredentialId),'Delete','_PortalUsers','Delete User',600,'Aneka')">
                    <img src="@Url.Content("~/Content/images/icons/fugue/cross-circle.png")" width="16" height="16">
                    Delete this user</a>
    </div>
</div>
