@model IEnumerable<CloudWebPortal.Models.CloudUserAccount>

@{
    Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="block-content">
<h1>
    Cloud Users
    <a href="#" onclick="openModalWindow(null,'Create','_CloudUsers','Create New Cloud User')"><img src="@Url.Content("~/Content/images/icons/fugue/plus-circle-blue.png")" width="16" height="16" alt="">Create New Cloud User</a>
</h1>
<div class="block-controls">
        <ul class="controls-buttons">
            <li class="sep"></li>
            <li id="Widget_Link"><a href="#" onclick="openModalWindow_ForWidget('@HttpContext.Current.User.Identity.Name','List','_CloudUsers',12)" title="Add This Widget To The Dashboard">
                <img src="@Url.Content("~/Content/images/icons/fugue/plus-circle.png")" width="16" height="16"></a></li>
        </ul>
    </div>
    <ul class="icon-list icon-user">
        @foreach (var item in Model)
        {
            <li>
                <a href="#" style="height: 1.4em;" onclick="openModalWindow(@Html.DisplayFor(modelItem => item.CloudUserAccountId),'Details','_CloudUsers',null,600)">
                    <span class="icon"></span>@Html.DisplayFor(modelItem => item.Username)<br/></a>
                    <select class="small" style="width: 93px;" onchange="openModalWindow(this.options[this.selectedIndex].id,'Details','_Clouds',null,1100)">
						<option>@item.Clouds.Count() Clouds</option>
                        @foreach (var cloud in item.Clouds.ToList())
                        {
                            <option id="@Html.DisplayFor(widgetItem => cloud.CloudId)">@Html.DisplayFor(Item => cloud.CloudName)</option>
                        }
					</select>
                
            </li>
        }
    </ul>
    <ul class="message">
        <li>Number of users: @Model.Count()</li>
    </ul>
</div>
