@model CloudWebPortal.Models.Widget
@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="block-content">
    @using (Html.BeginForm("CreatePost", "_DashboardWidgets", FormMethod.Post, new { @class = "form" }))
    {
        <div id="ValidationSummaryDiv_DashboardWidgets_Create">
            @Html.ValidationSummary()
        </div>
        <br />
        <fieldset>
            @Html.LabelFor(model => model.ControllerName)
            @Html.TextBoxFor(model => model.ControllerName, new { @class = "full-width", Value = @ViewBag.ControllerName })
            @Html.LabelFor(model => model.ActionName)
            @Html.TextBoxFor(model => model.ActionName, new { @class = "full-width", Value = @ViewBag.ActionName })
            @Html.LabelFor(model => model.ActionId)
            @Html.TextBoxFor(model => model.ActionId, new { @class = "full-width", Value = @ViewBag.ActionId })
            @Html.LabelFor(model => model.Width)
            @Html.TextBoxFor(model => model.Width, new { @class = "full-width", Value = @ViewBag.Width })
            @Html.LabelFor(model => model.AreaName)
            @Html.TextBoxFor(model => model.AreaName, new { @class = "full-width", Value = @ViewBag.AreaName })
            @Html.Label("Associated User")
            @Html.DropDownList("PortalUsers", "Select User")
            <br />
            <br />
            <p>
                <button type="submit" class="full-width button">
                    Add Widget</button>
            </p>
        </fieldset>
    }
</div>
<script type="text/javascript">
    $("button").click(function () {
        $("#ValidationSummaryDiv_DashboardWidgets_Create ul").addClass("message error no-margin");
    });
</script>
